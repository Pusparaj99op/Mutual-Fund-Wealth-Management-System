# Federal Wealth Management System - Environment Configuration
# Copy this file to .env and update values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Feature Engineering
FEATURE_SCALING=standard

# Model Configuration
XGBOOST_MAX_DEPTH=7
XGBOOST_LEARNING_RATE=0.1
XGBOOST_N_ESTIMATORS=200

# Prophet Configuration
PROPHET_YEARLY_SEASONALITY=true
PROPHET_WEEKLY_SEASONALITY=false

# Recommendation Engine
TOP_K_RECOMMENDATIONS=5
MIN_RATING_FILTER=3.0

# Streamlit Configuration
STREAMLIT_THEME=light
STREAMLIT_LAYOUT=wide

# Data Paths (relative to project root)
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
MODELS_PATH=models

# Database (Optional for future integration)
# DATABASE_URL=sqlite:///./mutual_funds.db

# API Documentation
API_DOCS_ENABLED=true
REDOC_ENABLED=true

# Security (Optional)
# API_KEY_ENABLED=false
# SECRET_KEY=your-secret-key-here
